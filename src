  <script>
    // --- DATABASE ---
    // Projetos agora com imagens
    const projectsData = [
      { id: 'solucoes-para-problema', title: { pt: 'Solu√ß√µes de Atendimento Inteligente', en: 'Smart Service Solutions' }, image: 'WhatsApp Image 2025-07-10 at 19.29.54 (1).jpeg', link: '#', isImage: true },
      { id: 'campanha-pizza', title: { pt: 'Campanha Sexta da Pizza', en: 'Pizza Friday Campaign' }, image: 'WhatsApp Image 2025-07-10 at 19.29.54.jpeg', link: '#', isImage: true },
      { id: 'campanha-coxinha', title: { pt: 'Campanha Coxinha Los Fritos', en: 'Los Fritos Coxinha Campaign' }, image: 'WhatsApp Image 2025-07-10 at 19.29.54 (2).jpeg', link: '#', isImage: true }
    ];

    // Assistente GPT (apenas um, como solicitado)
    const gptsData = [
        { 
            id: 'marketing-mentor-gpt', 
            title: { pt: 'Mentor de Marketing & IA', en: 'Marketing & AI Mentor' }, 
            description: { pt: 'Um assistente de IA focado em responder d√∫vidas e aprimorar estrat√©gias de marketing digital e uso de intelig√™ncia artificial em campanhas.', en: 'An AI assistant focused on answering questions and improving digital marketing strategies and the use of artificial intelligence in campaigns.' }, 
            link: '#', // Link ser√° atualizado posteriormente
            // √çcone Lucide para IA/Mentor
            icon: `<i data-lucide="brain" class="h-8 w-8 text-support-green"></i>` 
        }
    ];

    // Certifica√ß√µes comentadas. Deixar dados de exemplo, mas n√£o renderizar.
    const certificationsData = [
        // { id: 'marketing-digital', title: { pt: 'Marketing Digital Avan√ßado', en: 'Advanced Digital Marketing' }, issuer: 'Rock Content', year: '2024', link: '#', icon: `<i data-lucide="award" class="h-8 w-8 text-corporate-cyan"></i>` },
        // { id: 'google-ads-expert', title: { pt: 'Especialista em Google Ads', en: 'Google Ads Expert' }, issuer: 'Google', year: '2023', link: '#', icon: `<i data-lucide="award" class="h-8 w-8 text-corporate-cyan"></i>` },
        // { id: 'analytics-certification', title: { pt: 'Certifica√ß√£o Google Analytics', en: 'Google Analytics Certification' }, issuer: 'Google', year: '2023', link: '#', icon: `<i data-lucide="award" class="h-8 w-8 text-corporate-cyan"></i>` }
    ];

    // --- L√ìGICA DA P√ÅGINA ---
    let currentLang = 'pt';
    let typedInstance = null;

    function renderProjects() {
        const projectList = document.getElementById('project-list');
        if (!projectList) return;
        
        if (projectsData.length === 0) {
            projectList.innerHTML = '<p class="text-center text-slate-400" data-lang="pt:Projetos em breve...|en:Projects coming soon..."></p>';
            return;
        }
        projectList.innerHTML = '';
        projectsData.forEach((p, index) => {
            // Renderiza imagem se isImage for true, sen√£o renderiza iframe (v√≠deo)
            const mediaContent = p.isImage ? 
                `<img src="${p.image}" alt="${p.title[currentLang]}" class="project-image"/>` :
                `<iframe class="w-full h-full" src="https://www.youtube.com/embed/${p.embedId}" title="${p.title[currentLang]}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>`;

            projectList.innerHTML += `
                <div class="glass-effect rounded-xl overflow-hidden group transform hover:-translate-y-2 transition-transform duration-300" data-aos="fade-up" data-aos-delay="${250 + (index * 100)}">
                    <a href="${p.link}" target="_blank" class="block">
                        <div class="aspect-video">
                            ${mediaContent}
                        </div>
                        <div class="p-4">
                            <h3 class="text-white font-semibold truncate">${p.title[currentLang]}</h3>
                        </div>
                    </a>
                </div>
            `;
        });
    }

    function renderGpts() {
      const gptList = document.getElementById('gpt-list');
      if (!gptList) return;
      gptList.innerHTML = '';
      gptsData.forEach((g, index) => {
        gptList.innerHTML += `
          <div class="glass-effect rounded-xl overflow-hidden flex flex-col" data-aos="fade-up" data-aos-delay="${250 + (index * 100)}">
            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-start gap-4 mb-3">
                <div class="bg-slate-700 p-3 rounded-lg mt-1 flex-shrink-0">
                  ${g.icon}
                </div>
                <div>
                    <h3 class="text-xl font-bold text-white">${g.title[currentLang]}</h3>
                    <p class="text-slate-400 text-sm">${g.description[currentLang]}</p>
                </div>
              </div>
              <div class="flex-grow"></div>
              <a href="${g.link}" target="_blank" class="mt-4 inline-block w-full text-center bg-support-green text-white font-semibold py-2 px-4 rounded-lg hover:bg-support-green-dark transition-colors" data-lang="pt:Acessar Ferramenta|en:Access Tool"></a>
            </div>
          </div>`;
      });
      // Renderizar os √≠cones Lucide ap√≥s a inser√ß√£o no DOM
      lucide.createIcons();
    }

    function renderCertifications() {
        const certList = document.getElementById('certification-list');
        if (!certList) return;
        // N√£o renderizar certifica√ß√µes se a lista estiver vazia (comentada)
        if (certificationsData.length === 0) {
            certList.innerHTML = '<p class="text-center text-slate-400" data-lang="pt:Certifica√ß√µes em breve...|en:Certifications coming soon..."></p>';
            return;
        }
        certList.innerHTML = '';
        certificationsData.forEach((c, index) => {
            certList.innerHTML += `
              <div class="glass-effect rounded-xl overflow-hidden transform transition-all duration-300 hover:border-corporate-cyan border border-transparent hover:-translate-y-1" data-aos="fade-up" data-aos-delay="${250 + (index * 100)}">
                <a href="${c.link}" target="_blank" class="p-6 flex items-center gap-5 group">
                  <div class="bg-slate-700 p-3 rounded-lg group-hover:bg-corporate-cyan-900/50 transition-colors">
                    ${c.icon}
                  </div>
                  <div class="flex-grow">
                    <h4 class="font-semibold text-white">${c.title[currentLang]}</h4>
                    <p class="text-sm text-slate-400">${c.issuer} - ${c.year}</p>
                  </div>
                  <i data-lucide="external-link" class="h-5 w-5 text-slate-400 group-hover:text-corporate-cyan transition-colors"></i>
                </a>
              </div>`;
        });
        // Renderizar os √≠cones Lucide ap√≥s a inser√ß√£o no DOM
        lucide.createIcons();
    }

    function updateTyped() {
      if (typedInstance) typedInstance.destroy();
      // T√≠tulos para Vitor - Marketing
      const strings = currentLang === 'pt' ? ["Especialista em Marketing Digital", "Gestor de Tr√°fego Pago", "Consultor de Performance"] : ["Digital Marketing Specialist", "Paid Traffic Manager", "Performance Consultant"];
      typedInstance = new Typed("#typed-title", { strings, typeSpeed: 50, backSpeed: 30, loop: true });
    }

    function updateTexts() {
        document.querySelectorAll('[data-lang]').forEach(el => {
            const translations = el.dataset.lang.split('|').reduce((acc, item) => { const [lang, text] = item.split(':'); acc[lang] = text; return acc; }, {});
            el.textContent = translations[currentLang] || translations['pt'];
        });
        document.querySelectorAll('[data-lang-placeholder]').forEach(el => {
            const translations = el.dataset.langPlaceholder.split('|').reduce((acc, item) => { const [lang, text] = item.split(':'); acc[lang] = text; return acc; }, {});
            el.placeholder = translations[currentLang] || translations['pt'];
        });
    }
    
    function changeLang(lang) {
        currentLang = lang;
        // Atualizar classes de cor dos bot√µes de idioma
        document.getElementById('btn-pt').classList.toggle('bg-corporate-cyan', lang === 'pt');
        document.getElementById('btn-pt').classList.toggle('text-white', lang === 'pt');
        document.getElementById('btn-pt').classList.toggle('bg-slate-700', lang !== 'pt');
        
        document.getElementById('btn-en').classList.toggle('bg-corporate-cyan', lang === 'en');
        document.getElementById('btn-en').classList.toggle('text-white', lang === 'en');
        document.getElementById('btn-en').classList.toggle('bg-slate-700', lang !== 'en');
        
        updateTexts();
        updateTyped();
        renderProjects(); // Agora renderiza os projetos
        renderGpts(); 
        // renderCertifications(); // Continua comentado
        lucide.createIcons(); // Garante que os √≠cones Lucide sejam renderizados ap√≥s a mudan√ßa de idioma
    }

    function toggleDrawer(drawerId) {
        const drawer = document.getElementById(drawerId);
        const overlay = document.getElementById('overlay');
        const isOpen = !drawer.classList.contains('translate-x-full');
        if (isOpen) {
            drawer.classList.add('translate-x-full');
            overlay.classList.add('hidden');
        } else {
            closeAllDrawers(drawerId); 
            drawer.classList.remove('translate-x-full');
            overlay.classList.remove('hidden');
        }
    }

    function closeAllDrawers(excludeId = null) {
        document.querySelectorAll('.sidebar-transition').forEach(el => {
            if (el.id !== excludeId) el.classList.add('translate-x-full');
        });
        if (!excludeId) document.getElementById('overlay').classList.add('hidden');
    }

    document.addEventListener("DOMContentLoaded", () => {
      AOS.init({ duration: 700, easing: 'ease-out-cubic', once: true });
      changeLang('pt');
      lucide.createIcons(); // Renderiza os √≠cones Lucide no carregamento inicial
    });
  </script>
</body>
</html>
